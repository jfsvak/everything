{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "jsx": "react",
        "importHelpers": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "webpack",
        "jest",
        "tools"
    ],
    "types": [
        "typePatches"
    ]
}